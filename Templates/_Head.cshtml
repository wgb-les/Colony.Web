@{
	var pageTitle = "";
    var pageDescription = "";
    var pageKeywords = "";
	var pageData = Html.GetPageData();
	var currentSite = Colony.CMS.ColonyContext.Current.CurrentSite;

	if (pageData.WindowTitle != null) {
		pageTitle = pageData.WindowTitle;
	}
	else if (currentSite != null) {
		pageTitle = currentSite.WindowTitle;
	}
	else if (ViewBag.Title != null)
	{
		pageTitle = ViewBag.Title;
	}
	else {
		pageTitle = "";
	}


    if (pageData.MetaDescription != null)
    {
        pageDescription = pageData.MetaDescription;
    }
    else if (currentSite != null)
    {
        pageDescription = currentSite.MetaDescription;
    }
    else if (ViewBag.Title != null)
    {
        pageDescription = ViewBag.MetaDescription;
    }
    else
    {
        pageDescription = "";
    }


    if (pageData.MetaKeywords != null)
    {
        pageKeywords = pageData.MetaKeywords;
    }
    else if (currentSite != null)
    {
        pageKeywords = currentSite.MetaKeywords;
    }
    else if (ViewBag.Title != null)
    {
        pageKeywords = ViewBag.MetaKeywords;
    }
    else
    {
        pageKeywords = "";
    }


}
<title>@(pageTitle)</title>

