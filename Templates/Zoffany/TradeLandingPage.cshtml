<head>
    @{Html.RenderPartial("_Head.cshtml");}
</head>
<body class="zoffanySite">
    @{Html.RenderPartial("_Header.cshtml", "Zoffany");}
    <div id="container" class="col-2">
        @{ Html.RenderPartial("_Breadcrumbs.cshtml");}
        
        @{Html.RenderAction("Menu", "Navigation", new { area = "Pages", parentPageUrl = "/trade/", viewPath = "~/Templates/_TradeNavigation.cshtml" });}

        <div id="content">
            <h1>Trade Area</h1>
            <div class="wysiwygContent">
                @RenderBody()
            </div>
            <section class="boxSection imageLibraryWidget viewAllOption">
                <header>
                    <h2><a href="/trade/image-library/">Image Library</a></h2>
                </header>
                <div class="bd">

                    <a href="/trade/image-library/" class="pod">
                        <img src="//69445235844b78bbd4c8-40765e7850b487e7db6d0b1ca2adcee0.r24.cf3.rackcdn.com//_assets/images/cache/shop/hotspotssmaller/1-Phoebe-Rose-Lilac-Ad_lr.jpg" alt="Trade Images" />
                    </a>

                    <div class="viewMore">
                        <a href="/trade/image-library/" class="button">View all images</a>
                    </div>
                </div>
            </section>
            <section class="boxSection articleWidget viewAllOption">
                <header>
                    <h2><a href="/trade/releases/">Press Releases</a></h2>
                </header>
                <div class="bd">
                    <section class="moduleSection">
                        <h2>Trade Area</h2>
                        @Html.Action("LatestPressReleases", "PressReleases", new { numberOfRecords = 5 })
                    </section>
                    <div class="viewMore">
                        <a href="/trade/releases/" class="button">View all articles</a>
                    </div>
                </div>
            </section>            
        </div>
        <!-- End of content -->
        <aside class="sideCol rightCol">
            <section class="boxSection twitterFeed">
                <header class="header">
                    <h2 class="icon-twitter">Twitter</h2>
                </header>
                <div class="bd">
                    <a class="twitter-timeline" href="https://twitter.com/zoffanyfw" data-widget-id="423112955798880256" data-chrome="noheader nofooter noborders" data-tweet-limit="4">Tweets by @@Zoffany</a>
                    <script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + "://platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } }(document, "script", "twitter-wjs");</script>
                </div>
            </section>
        </aside>
    </div>
    @Html.Partial("_Footer.cshtml")
</body>
</html>
