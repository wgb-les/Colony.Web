{

<script type="text/javascript">

	if (!Redant.util.browser.isMobile()) {

		_.templateSettings.variable = "rc";

		document.ontouchmove = function (event) { event.preventDefault(); }

		var homepageData;

        // THIS BREAKS FOOTER
		//$.getJSON('homepages/homepage/data', function (json) {
		//	homepageData = json;
		//});

		function getHomepageItem(itemId) {
			var index = 0;
			var found;
			var entry;
			for (index = 0; index < homepageData.length; ++index) {
				entry = homepageData[index];
				if (entry.Id == itemId) {
					found = entry;
					break;
				}
			}

			return found;
		}

		function render(clickedElement, target) {
			var $clickedElement = $(clickedElement);
			var itemId = $clickedElement.data('itemid');
			var jsonObject = getHomepageItem(itemId);
			var $target = $(target);

			if (jsonObject != null) {

				var template = _.template(
					$("script.internalPageTemplate").html()
				);

				$target.html(template({ item: jsonObject }));

			}
		}
	}

</script>
	<script type="text/template" class="internalPageTemplate">
	<ul id="collectionsControls">
		<li><span class="carousel-play-pause"><span class="icon icon-pause"></span></span></li>
		<% _.each(rc.item.Images, function(image) { %>
			<li><a></a></li>
	   <% }) %>
	</ul>
	<% _.each(rc.item.Images, function(image) { %>
		<div class="background" style="background-image: url('<%= _.escape(image.Url) %>'); background-size: cover;">&nbsp;</div>
	<% }) %>
	<div class="background"></div>
	<div class="panel">
		<h1><%= rc.item.Name %></h1>
		<%= rc.item.LongDescription %>

		<% if (rc.item.Products != null && rc.item.Products.length > 0) { %>
			<h3>View Designs</h3>
			<ul>
				<% _.each(rc.item.Products, function(product) { %>
					<li>
						<a href="<%= _.escape(product.Url) %>">
							<% if (product.Images.length > 0) { %>
								<img class="lazy" src="<%= _.escape(product.Images[0].Url) %>" alt="" />
							<% } else { %>
								<img class="lazy" src="/_images/placeholders/article.jpg" alt="" />
							<% } %>
						</a>
					</li>
				<% }) %>
			</ul>
		<% } %>
		<div class="clear"></div>
	</div>
</script>
}
