
@{
    bool isPaintListing = false;

    if (Colony.CMS.ColonyContext.Current.Response.UrlExtension == null)
    {
        if (Colony.CMS.ColonyContext.Current.Response.UrlParts.Count > 1)
        {
            if (Colony.CMS.ColonyContext.Current.Response.UrlParts[1] == "paint")
            {
                isPaintListing = true;
            }
        }
    }
}

<!DOCTYPE html>
