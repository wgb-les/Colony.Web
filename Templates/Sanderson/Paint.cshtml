<head>
    @{Html.RenderPartial("_Head.cshtml");}
</head>

@if (isPaintListing)
{ 
    <body class="sandersonSite productListing">
        @{ Html.RenderPartial("_Header.cshtml", "Zoffany");}

        @*<div id="content">*@
        @RenderBody()
        @*</div>*@

        @Html.Partial("_Footer.cshtml")
        @*@RenderSection("scripts", required: false)*@
    </body>
}
else
{
    <body class="sandersonSite productPage">
        @{Html.RenderPartial("_Header.cshtml", "Sanderson");}
        <div class="notification" class="">
            <h2 class="icon-shopping-cart">&nbsp;Item Added to Basket</h2>
        </div>
        <div id="container">
            @{ Html.RenderPartial("_Breadcrumbs.cshtml");}
            @*<div id="content">*@
            @RenderBody()
            @*</div>*@
        </div>
        @Html.Partial("_Footer.cshtml")
        @*@RenderSection("scripts", required: false)*@
    </body>
}
</html>
