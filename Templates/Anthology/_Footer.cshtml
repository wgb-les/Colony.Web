	($(document).scrollTop() > 100){
		$(".scrollDownAnt").hide();
		$(".ant-back-to-top").show();
	}
	else
	{
		$(".scrollDownAnt").show();
		$(".ant-back-to-top").hide();
	}
$(document).on("scroll", function(){
	if
		($(document).scrollTop() > 100){
			$(".scrollDownAnt").hide();
			$(".ant-back-to-top").show();
		}
		else
		{
			$(".scrollDownAnt").show();
			$(".ant-back-to-top").hide();
		}
});
</script>


