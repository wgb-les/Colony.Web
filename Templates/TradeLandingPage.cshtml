<head>
    @{ Html.RenderPartial("~/Templates/_Head.cshtml"); }
</head>
<body class="harlequinSite">
@{ Html.RenderPartial("~/Templates/_Header.cshtml", "Harlequin"); }
<div id="container" class="col-2">
    @{ Html.RenderPartial("~/Templates/_Breadcrumbs.cshtml"); }
    @{ Html.RenderAction("Menu", "Navigation", new {area = "Pages", parentPageUrl = "/trade/", viewPath = "~/Templates/_TradeNavigation.cshtml"}); }

    <div id="content">
        <h1>Trade Area</h1>
        <div class="wysiwygContent">
            @RenderBody()
        </div>
        <section class="boxSection imageLibraryWidget viewAllOption">
            <header>
                <h2>
                    <a href="/trade/image-library/">Image Library</a>
                </h2>
            </header>
            <div class="bd">

                <a href="/trade/image-library/" class="pod">
                    <img src="/_images/photos/listings/001.jpg" alt="[Link Name]"/>
                </a>

                <div class="viewMore">
                    <a href="/trade/image-library/" class="button">View all images</a>
                </div>
            </div>
        </section>
        <section class="boxSection articleWidget viewAllOption">
            <header>
                <h2>
                    <a href="/trade/releases/">Press Releases</a>
                </h2>
            </header>
            <div class="bd">
                <section class="moduleSection">
                    <h2>Trade Area</h2>
                    @Html.Action("LatestPressReleases", "PressReleases", new {numberOfRecords = 5})
                </section>
                <div class="viewMore">
                    <a href="/trade/releases/" class="button">View all articles</a>
                </div>
            </div>
        </section>
    </div>
    <!-- End of content -->
    <aside class="sideCol rightCol">
        <section class="boxSection twitterFeed">
            <header class="header">
                <h2 class="icon-twitter">Twitter</h2>
            </header>
            <div class="bd">
                <a class="twitter-timeline" href="https://twitter.com/HarlequinFW" data-widget-id="423109548413440000">Tweets by @@HarlequinFW</a>
                <script>
                    !function(d, s, id) {
                        var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https';
                        if (!d.getElementById(id)) {
                            js = d.createElement(s);
                            js.id = id;
                            js.src = p + "://platform.twitter.com/widgets.js";
                            fjs.parentNode.insertBefore(js, fjs);
                        }
                    }(document, "script", "twitter-wjs");
                </script>
            </div>
        </section>
    </aside>
</div>
@Html.Partial("~/Templates/_Footer.cshtml")
</body>
</html>