@model IEnumerable<Colony.Modules.Videos.Models.VideoCategory>

@if (Model.Any())
{
    <section class="categorySection videos">
        <h2>Categories</h2>
        <ul class="categoryList events">
            @foreach (var category in Model)
            {
                <li>
                    <article>
                        <a href="/media@(category.Uri)" class="thumbnail">
                            <img src="@Url.ImageUrl(category.ImageAssetId, "Videos", "CategoryThumbnail", @"/_images/placeholders/categoryList.jpg")" alt="@category.Name"/>
                        </a>
                        <div class="details">
                            <h3>
                                <a href="/media@(category.Uri)">@category.Name</a>
                            </h3>
                            <p>@category.ShortDescription</p>
                        </div>
                    </article>
                </li>
            }
        </ul>
    </section>
}