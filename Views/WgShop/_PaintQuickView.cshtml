                                                                                                                                                                          {
                                                                                                                                                                              <text>data-imageAssetId="@image.ImageAssetID"</text>
                                                                                                                                                                          } data-productimage="@imageThumbnailUrl" data-url="/shop/@Url.ProductUrl(Model.Product)?code=@Model.SelectedSku.Code" @if (isB2B)
