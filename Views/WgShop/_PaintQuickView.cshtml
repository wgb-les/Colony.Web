                    {
                        <a href="@Url.ProductCategoryUrl(Model.Category)">@Model.Category.Name</a>
                    }
                    else
                    {
                        @Model.Category.Name
                    }
                </h3>
            }
        </div>

        <div class="columns small-3">
            <a href="#" class="share share-link" data-reveal-id="share" style="display: none">
