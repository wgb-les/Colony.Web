@model Colony.Commerce.PaymentProvider.DataCash.Models.Payment3dSecureIframeViewModel
@{
    ViewBag.Title = "Payment3dSecureIframe";
}
<div id="secure3dContainer">
    <div id="content">
        <h1>Processing your 3-D Secure Transaction</h1>
        <form name="threeDSecure" id="threeDSecure" action="@Model.AcsUrl" method="post">
            <fieldset>
                <h2>You are currently being redirected to the 3-D Secure payment page.</h2>
                <p>If you are not redirected in a few seconds please click submit to continue.</p>
                <input type="submit" class="formButton" name="Continue" value="Submit" alt="Submit"/>
                <input type="hidden" name="PaReq" value="@Model.PaReq"/>
                <input type="hidden" name="TermUrl" value="@Model.TermUrl"/>
                <input type="hidden" name="MD" value="@Model.MD"/>
            </fieldset>
        </form>
    </div>
</div>

<script type="text/javascript">
    window.onload = function() {
        var form = document.getElementById('threeDSecure');
        form.submit();
    }
</script>