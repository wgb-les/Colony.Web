@model Colony.CMS.ValidationSummary
<div class="validation-summary-valid" @if (Model.UnobtrusiveJavaScriptErrorsEnabled && !Model.ExcludePropertyErrors)
                                      {
                                          <text>data-valmsg-summary="true"</text>
                                      }>
    @if (!string.IsNullOrWhiteSpace(Model.Message))
    {
        <span>@Model.Message</span>
    }
    @foreach (var error in Model)
    {
        <p class="error alertInfo">@Html.Raw(error.Message)</p>
    }
</div>