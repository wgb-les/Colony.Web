                                                                                                }>
                        Details
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("OrderHistory", "AccountArea", new {area = "AccountArea"})" @if (Model == "Orders")
                                                                                                     {
                                                                                                         <text>class="selected"</text>
                                                                                                     }>
                        Orders
                    </a>
                </li>
            }
