    <% if (rc.model.ProductSearchResults.length > 0) { %>

    <div class="listing-options">
        <% if (rc.model.Keywords != 'undefined' && rc.model.Keywords !== null) {%>
        <div class="listing-group result-count">
            <p>Showing <strong><%= rc.model.TotalResultCount %></strong> results for <strong>"<%=rc.model.Keywords%>"</strong></p>
        </div>
        <% } else { %>
        <div class="listing-group result-count">
            <p>Showing <strong><%= rc.model.TotalResultCount %></strong> results.</p>
        </div>
        <% } %>
        <% if (rc.model.NoResults) { %>
        <div class="alertInfo message">Sorry, we could not find any results for you chosen colour. Similar products are shown below.</div>
        <%}%>

        <div class="listing-group listing-group-actions">

            <div class="result-layout">

                <ul class="layout-options">

                    <li class="active">

                        <a href="#" class="layout-option" id="setLayoutOptionGrid">Grid View</a>

                    </li>

                    <li>

                        <a href="#" class="layout-option" id="setLayoutOptionList">List View</a>

                    </li>

                </ul>

            </div>

            <div class="result-sort">

                <div class="field select">

                    <label for="SortBy" style="display: none;">Sort results by</label>
                    <select id="SortBy" name="SortBy">
                        <option value="default" <% if (rc.model.SortBy == 'default') print('selected="selected"') %>>Sort results by.........</option>
                        <option value="colourhigh" <% if (rc.model.SortBy == 'colourhigh') print('selected="selected"') %>>Colour (light to dark)</option>
                        <option value="colourlow" <% if (rc.model.SortBy == 'colourlow') print('selected="selected"') %>>Colour (dark to light)</option>
                        <option value="alphaasc" <% if (rc.model.SortBy == 'alphaasc') print('selected="selected"') %>>Design Name (A-Z)</option>
                        <option value="alphadesc" <% if (rc.model.SortBy == 'alphadesc') print('selected="selected"') %>>Design Name (Z-A)</option>
                        <option value="datedesc" <% if (rc.model.SortBy == 'datedesc') print('selected="selected"') %>>Recent</option>

                    </select>

                </div>

            </div>

        </div>
    </div>

    <div class="productList searchResults">
        <% _.each(rc.model.ProductSearchResults, function(itm) { %>
        <%=rc.itemTemplate(itm) %>
        <% }); %>
    </div>
    <% } else { %>
    <div class="alertInfo message">Your search did not return any results.</div>
    <% } %>
</div>
