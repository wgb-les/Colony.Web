@using Colony.Util.Web
@model Colony.Commerce.Areas.ShopPurchase.Models.AbandonedBasketViewModel

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Basket Abandonment</title>
    <meta content="text/html; charset=iso-8859-1" http-equiv="Content-Type"/>
</head>
<body style="background-color: #ffffff;">
<table cellspacing="0" border="0" style="background: #ffffff;" cellpadding="0" width="100%">
    <tr>
        <td>
            <table width="588" cellspacing="0" border="0" cellpadding="0" align="center">

                <tr>
                    <td>
                        <table width="588" cellspacing="0" border="0" cellpadding="0" align="center">
                            <tr>
                                <td>
                                    <img style="border: none; display: block;" src="http://sanderson.designsvn.redantdev.com/_email/basket-abandonment/sanderson/images/header-logo.gif" border="0" alt="Sanderson"/>
                                </td>
                            </tr>
                        </table>

                        <table width="588" cellspacing="0" border="0" cellpadding="0" align="center">
                            <tr>
                                <td width="107">&nbsp;</td>
                                <td width="361" style="text-align: center;">
                                    <table width="!00%" cellspacing="0" border="0" cellpadding="0" align="center">
                                        <tr>
                                            <td>
                                                <a href="@UriExtensions.AbsoluteUrl("shop/new-collections")">
                                                    <img style="border: none; display: block;" src="@UriExtensions.AbsoluteUrl("/_email/basket-abandonment/sanderson/images/button-new.gif")" border="0" width="60" height="27" alt="New"/>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="@UriExtensions.AbsoluteUrl("/shop/fabric")">
                                                    <img style="border: none; display: block;" src="@UriExtensions.AbsoluteUrl("_email/basket-abandonment/sanderson/images/button-fabric.gif")" border="0" width="74" height="27" alt="Fabric"/>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="@UriExtensions.AbsoluteUrl("/shop/wallpaper")">
                                                    <img style="border: none; display: block;" src="@UriExtensions.AbsoluteUrl("/_email/basket-abandonment/sanderson/images/button-wallpaper.gif")" border="0" width="104" height="27" alt="Wallpaper"/>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="@UriExtensions.AbsoluteUrl("/home-accessories")">
                                                    <img style="border: none; display: block;" src="@UriExtensions.AbsoluteUrl("/_email/basket-abandonment/sanderson/images/button-accessories.gif")" border="0" width="120" height="27" alt="Home Accessories"/>
                                                </a>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td width="105">&nbsp;</td>
                            </tr>
                        </table>
                    </td>
                </tr>

                <tr>
                    <td>
                        <table width="588" cellspacing="0" border="0" cellpadding="0" align="center" style="color: #4c4c4c; font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif; padding: 0 0 10px 0;">
                            <tr>
                                <td>
                                    <h1 style="color: #4c4c4c; font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif; font-size: 14px; font-weight: normal; margin: 20px 0 20px 0; padding: 0;">Hi @Model.Person.FirstName</h1>

                                    <p style="font-size: 14px; margin: 0 0 15px 0; padding: 0;">We've noticed that you've left some items in your basket and we don't want you to miss out!</p>
                                    <p style="font-size: 14px; margin: 0 0 15px 0; padding: 0;">Here's a reminder of what's in your basket. Click the 'buy now' button below to complete your order. </p>
                                    <p style="font-size: 14px; margin: 0 0 15px 0; padding: 0;">Happy shopping!</p>

                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>

                <tr>
                    <td>
                        <table cellspacing="0" cellpadding="10" style="border: 1px solid #6e6e6e; color: #4c4c4c; font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif; font-size: 14px; font-weight: normal; width: 586px;">
                            <tr style="width: 586px;">
                                <td width="120">&nbsp;</td>
                                <td width="186" valign="top">Description</td>
                                <td width="100" valign="top" align="center">Item price</td>
                                <td width="80" valign="top" align="center">Quantity</td>
                                <td width="100" valign="top" align="center">Total price</td>
                            </tr>
                            @foreach (var line in Model.Basket.BasketLines)
                            {
                                <tr style="width: 586px;">
                                    <td width="120" style="border-top: 1px solid #6e6e6e;">
                                        <img src="@UriExtensions.AbsoluteUrl(line.ImageUrl)" width="120" height="120" alt="@line.Product.DisplayName"/>
                                    </td>
                                    <td width="186" style="border-top: 1px solid #6e6e6e;">@line.Product.DisplayName</td>
                                    <td width="100" align="center" style="border-top: 1px solid #6e6e6e;">@Model.Basket.CurrencyRegion.RegionInfo.CurrencySymbol @line.UnitPriceInc.ToString("#0.00")</td>
                                    <td width="80" align="center" style="border-top: 1px solid #6e6e6e;">@line.Quantity</td>
                                    <td width="100" align="center" style="border-top: 1px solid #6e6e6e;">@Model.Basket.CurrencyRegion.RegionInfo.CurrencySymbol @line.TotalInc.ToString("#0.00")</td>
                                </tr>
                            }
                            <tr style="border-top: 1px solid #6e6e6e; width: 586px;">
                                <td width="360" colspan="3" style="border-top: 1px solid #6e6e6e;">&nbsp;</td>
                                <td width="126" align="right" style="border-top: 1px solid #6e6e6e;">Grand Total</td>
                                <td width="100" align="center" style="border-top: 1px solid #6e6e6e;">@Model.Basket.CurrencyRegion.RegionInfo.CurrencySymbol @Model.Basket.GrandTotal.ToString("#0.00")</td>
                            </tr>

                        </table>
                    </td>
                </tr>

                <tr>
                    <td>
                        <table cellspacing="0" cellpadding="0" style="width: 588px;">
                            <tr>
                                <td height="10">&nbsp;</td>
                            </tr>
                            <tr>
                                <td align="right">
                                    <a href="@UriExtensions.AbsoluteUrl("/basket/summary/?basketId=" + Model.CookieGuid)" style="text-decoration: none;">
                                        <img style="border: 0;" src="@UriExtensions.AbsoluteUrl("/_email/basket-abandonment/sanderson/images/buy-now.gif")" width="92" height="26" border="0" alt="Buy now"/>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td height="20">&nbsp;</td>
                            </tr>
                        </table>
                    </td>
                </tr>

                <tr>

                    <td align="center">
                        <table width="588" align="center" cellspacing="0" border="0" cellpadding="0">
                            <tr>
                                <td width="185">
                                    <img style="border: none; display: inline; margin: 0px 7px 0 7px; text-align: center;" src="@UriExtensions.AbsoluteUrl("/_email/basket-abandonment/sanderson/images/footer-line.gif")" border="0" alt=""/>
                                </td>

                                <td width="218">

                                    <table width="100%" align="center" cellspacing="0" cellpadding="3" style="border: 1px solid #465366;">
                                        <tr>
                                            <td align="center">
                                                <a href="https://www.facebook.com/sandersonfabricsandwallpapers" style="text-decoration: none;">
                                                    <img style="border: none; display: block;" src="@UriExtensions.AbsoluteUrl("/_email/basket-abandonment/sanderson/images/icon-fb.gif")" width="21" height="26" border="0" alt="Facebook"/>
                                                </a>
                                            </td>
                                            <td align="center">
                                                <a href="https://twitter.com/SandersonFW" style="text-decoration: none;">
                                                    <img style="border: none; display: block; text-decoration: none;" src="@UriExtensions.AbsoluteUrl("/_email/basket-abandonment/sanderson/images/icon-twitter.gif")" width="27" height="26" border="0" alt="Twitter"/>
                                                </a>
                                            </td>
                                            <td align="center">
                                                <a href="https://www.pinterest.com/SandersonFW/" style="text-decoration: none;">
                                                    <img style="border: none; display: block; text-decoration: none;" src="@UriExtensions.AbsoluteUrl("/_email/basket-abandonment/sanderson/images/icon-pinterest.gif")" width="27" height="26" border="0" alt="Pinterest"/>
                                                </a>
                                            </td>
                                            <td align="center">
                                                <a href="https://instagram.com/sanderson1860/" style="text-decoration: none;">
                                                    <img style="border: none; display: block; text-decoration: none;" src="@UriExtensions.AbsoluteUrl("/_email/basket-abandonment/sanderson/images/icon-instagram.gif")" width="21" height="26" border="0" alt="Instagram"/>
                                                </a>
                                            </td>
                                        </tr>
                                    </table>
                                </td>

                                <td width="185">
                                    <img style="border: none; display: inline; margin: 0 7px 0 7px; text-align: center;" src="@UriExtensions.AbsoluteUrl("/_email/basket-abandonment/sanderson/images/footer-line.gif")" border="0" alt=""/>
                                </td>

                            </tr>

                        </table>
                    </td>

                </tr>

            </table>
        </td>
    </tr>
</table>
</body>
</html>