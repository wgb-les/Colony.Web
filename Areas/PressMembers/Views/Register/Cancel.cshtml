@model bool
@{
    ViewBag.Title = "Cancel";
}

@if (Model)
{
    <h2>Registration Cancelled</h2>
    <p>
        Your account has been closed.
        If you would like to re-register click @Html.ActionLink("here", "Register", "Register", new {area = "Members"}).
    </p>
    <p>Thanks!</p>
}
else
{
    <h2>There was an error cancelling your account.</h2>
}