@model IEnumerable<Colony.Commerce.Models.Inspire.InspireSearch>
<div id="SearchResults" name="SearchResults">
    <div class="row">
        @{
        var isfirst = true;
        foreach (var article in Model)
        {

        if (article.isHero && isfirst)
        {
        <div class="medium-12 large-8 columns">
            <div class="InspireArticleHero">
                <a href="@article.ArticleURL" alt="@article.Title">
                    <img src="@article.ImageURL" alt="@article.ImageAlt" />
                    @{
                        if (!string.IsNullOrEmpty(article.ShopTheLook))
                        {
                            <div class="stlTag fa-info" onclick="getQuickShop('@article.ShopTheLook')"></div>
                        }}
                    <div class="caption">
                        <h2>@article.Title</h2>
                        <span class="fa-angle-right-after" style="float:left;" class="InspireArticleDescription">@article.ShortDescription</span>
                    </div>
                </a>
            </div>
        </div>

        }
        else
        {
        <div class="medium-6 large-4 columns end">
            <div class="InspireArticle">
                <a href="@article.ArticleURL" alt="@article.Title">
                    <img src="@article.ImageURL" alt="@article.ImageAlt" />
                    @{
                        if (!string.IsNullOrEmpty(article.ShopTheLook))
                        {
                            <div class="stlTag fa-info" onclick="getQuickShop('@article.ShopTheLook')"></div>
                        }}
                    <div class="caption">
                        <h2>@article.Title</h2>
                        <span class="fa-angle-right-after" style="float:left;" class="InspireArticleDescription">@article.ShortDescription</span>
                    </div>
                </a>
            </div>
        </div>

        }
        isfirst = false;
        }
        }
    </div>
</div>
<script type="text/javascript">
    $('#resultcount').text(@Model.Count());
</script>
